    fill: "#FFF3E0"
    stroke: "#F57C00"
    stroke-width: 2
  }
  
  api: "API Server"
  auth: "Auth Service"
}

database: {
  label: "💾 Data"
  style: {
    fill: "#F3E5F5"
    stroke: "#7B1FA2"
